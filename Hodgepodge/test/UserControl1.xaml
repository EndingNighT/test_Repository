<UserControl x:Class="Hodgepodge.SmallWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hodgepodge"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="LightGray" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <DockPanel Background="Gray">
                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" Margin="5" />
                    <Button Content="X" Width="20" Height="20" Margin="5" Click="CloseButton_Click" />
                </DockPanel>

                <!-- 窗口内容 -->
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
